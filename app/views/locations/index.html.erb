<h1>World Time</h1>
<%= link_to "Add Location", locations_new_path %>
<ul>
  <% @locations.each do |l| %>
    <li>
     <%= l.country %>
     <%= link_to "wikicountry", l.country_link %>
     <%= l.region  %>
     <%= link_to "wikiregion", l.region_link %>
     <%  timezone = Timezone::Zone.new :latlon => [l.lat, l.long] %>
     <%= timezone.time Time.now %>
     <% if timezone.dst?(Time.now) %>
      observes daylight savings
     <%=  image_tag "daylight" %> 
     <% end %>
    </li> 
  <% end %>  
</ul>

<%= will_paginate @locations %>